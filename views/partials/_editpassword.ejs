<!-- EDIT PASSWORD FORM BEGIN -->
<div class="edit_password_container" style="z-index: 999999;">
  <header>
    <h1>Edit your password</h1>
  </header>

  <form method="POST" action="/passwords/">
    <div class="form_group form-floating">
      <input id="floatingInput" type="text" name="website" class="form-control" required="true" value="https://">
      <label for="floatingInput">Website URL</label>
    </div>
    <div class="form_group form-floating">
      <input id="floatingInput" type="text" name="name" class="form-control" required="true">
      <label for="floatingInput">Name</label>
    </div>
    <div class="form_group">
      <select name="categories" class="form-select" required="true">
        <option value="" selected="selected" disabled hidden>Pick your category</option>
        <option value="1">Business</option>
        <option value="2">Entertainment</option>
        <option value="3">Social</option>
        <option value="4">News</option>
      </select>
    </div>
    <div class="form_group form-floating">
      <input id="floatingInput" type="text" name="login" class="form-control" required="true">
      <label for="floatingInput">Log in</label>
    </div>
    <div class="form_group form-floating">
      <label for="password">Password</label>
      <div class='password-options'>
        <div>
          <div class='input-group'>
          <input type="password" name="password" class="form-control" id ="randomPassEdit" required="true" autocomplete="off">
        </div>
        <div class ='form-group mb-2'>
          <label for='passwordLengthEdit'>Password length: <output class='sliderVal'>12</output></label>
          <input type='range' class='form-range rangeInput' id='passwordLengthEdit' name='passwordLengthEdit' list='tickmarks' min='8' max='16' step='1' value='12'>
        </div>
      </div>
      <div class='form-inline password-toggles ml-5'>
        <div class='form-check form-switch'>
          <input class='form-check-input' type='checkbox' id='lowercaseToggleEdit' name='lowercase' checked>
          <label class='form-check-label' for='lowercaseToggle'>Lowercase</label>
        </div>
        <div class='form-check form-switch'>
          <input class='form-check-input' type='checkbox' id='uppercaseToggleEdit' name='uppercase' checked>
          <label class='form-check-label' for='uppercaseToggle'>Uppercase</label>
        </div>
        <div class='form-check form-switch'>
          <input class='form-check-input' type='checkbox' id='numberToggleEdit' name='numbers' checked>
          <label class='form-check-label' for='numberToggle'>Numbers</label>
        </div>
        <div class='form-check form-switch'>
          <input class='form-check-input' type='checkbox' id='symbolToggleEdit' name='symbols' checked>
          <label class='form-check-label' for='symbolToggle'>Symbols</label>
        </div>
      </div>
    </div>
    <button class='btn btn-outline-secondary btn-md btn-block full-width' type='button' id ='generateEdit'>Generate!</button>
      <div class="form_btns">
        <button type="submit" class="btn btn-dark btn-md save_new_btn">Save</button>
        <button type="button" class="btn btn-outline-secondary cancel_btn btn-md ">Cancel</button>
      </div>
  </form>
</div>
</div>
<!-- EDIT PASSWORD FORM END -->
