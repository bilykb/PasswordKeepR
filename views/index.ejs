    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous"/>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer"/>

    <!-- Clipboard -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/1.4.0/clipboard.min.js" integrity="sha512-iJh0F10blr9SC3d0Ow1ZKHi9kt12NYa+ISlmCdlCdNZzFwjH1JppRTeAnypvUez01HroZhAmP4ro4AvZ/rG0UQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Primer/18.1.0-rc.13df26d0/tooltips.min.css" integrity="sha512-ova0SkioVXDtFXGsCN/chQeb7VB4szdSQiz46ZCnBTMX8GljhX8pOM2YlUXZdEy7GWn+fEEPrkbhUqISWD15tA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


  </head>

  <body>
    <%- include('partials/_header') %>

    <div class="viewport_overlay is_hidden"></div>
    <!-- CONTENT WRAPPER BEGIN -->
    <div class="content-wrapper">


      <!-- SORT BY DROPDOWN -->
      <div class="dropdown" style="align-self: flex-end">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Sort by
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <form method="GET" action="/api/passwords" id="sort_by_form">
            <button type="submit" class="dropdown-item" value="category" name="sort_by">Category</button>
            <button type="submit" class="dropdown-item" value="name" name="sort_by">Name</button>
          </form>
        </div>
      </div>

      <button class="create_new_password" style="align-self: flex-end"><svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg"><line x1="15.1191" y1="0.90625" x2="15.1191" y2="29.0937" stroke="white" stroke-width="2"/><line x1="29.0937" y1="16" x2="0.90624" y2="16" stroke="white" stroke-width="2"/></svg></button>

      <!-- ADD NEW PASSWORD FORM -->
      <div class="create_new_password_container">
        <h2>Add a new password</h2>
        <form method="POST" action="/api/passwords">
          <label for="website">Website</label>
          <input type="text" name="website" class="form-control">
          <label for="name">Name</label>
          <input type="text" name="name" class="form-control">
          <label for="category">Category</label>
          <select name="categories" class="form-select">
            <option value="" selected="selected" disabled hidden>Pick your category</option>
            <option value="1">Business</option>
            <option value="2">Entertainment</option>
            <option value="3">Social</option>
            <option value="4">News</option>
          </select>
          <label for="login">Log in</label>
          <input type="text" name="login" class="form-control">
          <label for="password">Password</label>
          <div class='password-options'>
            <div>
              <div class='input-group'>
                <input type="text" name="password" id='randomPass' class="form-control" autocomplete="off" value=''>
              </div>
              <div class ='form-group mb-2'>
                <label for='passwordLength'>Password length: <output id='sliderVal'>8</output></label>
                <input type='range' class='form-range' id='passwordLength' name='passwordLength' list='tickmarks' min='8' max='16' step='1' value='8'>
              </div>
            </div>
            <div class='form-inline password-toggles ml-5'>
              <div class='form-check form-switch'>
                <input class='form-check-input' type='checkbox' id='lowercaseToggle' name='lowercase' checked>
                <label class='form-check-label' for='lowercaseToggle' checked>Lowercase</label>
              </div>
              <div class='form-check form-switch'>
                <input class='form-check-input' type='checkbox' id='uppercaseToggle' name='uppercase' checked>
                <label class='form-check-label' for='uppercaseToggle' checked>Uppercase</label>
              </div>
              <div class='form-check form-switch'>
                <input class='form-check-input' type='checkbox' id='numberToggle' name='numbers' checked>
                <label class='form-check-label' for='numberToggle'>Numbers</label>
              </div>
              <div class='form-check form-switch'>
                <input class='form-check-input' type='checkbox' id='symbolToggle' name='symbols' checked>
                <label class='form-check-label' for='symbolToggle'>Symbols</label>
              </div>
            </div>
          </div>
          <button class='btn btn-outline-secondary btn-lg btn-block full-width' type='button' id ='generate'>Generate!</button>
          <div class='form-check form-switch org-toggle'>
            <input class='form-check-input' type='checkbox' id='orgOption' name='organization'>
            <label class='form-check-label' for='symbolToggle'>Organization</label>
          </div>
            <div class="form_btns">
              <button type="submit" class="btn btn-primary save_new_btn">Save</button>
              <button type="button" class="btn btn-danger cancel_btn">Cancel</button>
            </div>
        </form>
      </div>

      <!-- PERSONAL PASSWORDS BEGIN -->
      <div class="personal_passwords_container">
        <% if (!private[0]) { %>
          <lottie-player src="https://assets10.lottiefiles.com/packages/lf20_gcudkx1v.json" background="transparent"  speed="1"  style="width: 300px; height: 300px; align-self: center;"autoplay></lottie-player>
          <h2 class="is_empty_msg">You currently have no private passwords.</h2>
        <% } else { %>
          <h2>Your private passwords</h2>
          <ul class="password_list">
          <% private.forEach((password) => { %>
            <li class="password_item">
                <div class="background" style="background-image: url(//logo.clearbit.com/<%=password.password_url%>)"></div>
                <div class="hidden">
                  <h3><%=password.password_name%></h3>
                  <div class="password_buttons">
                    <button><a target="_blank" style="color: white; text-decoration: none;" href="https://<%=password.password_url%>">Visit</a></button>
                    <button class="clipboard_btn" data-toggle="tooltip" title="copied!" data-clipboard-action="copy" data-clipboard-text="<%=password.password_password%>">Copy</button>
                    <button type="submit" class="btn btn-primary edit_btn" value="<%=password.password_id%>">Edit</button>
                    <form method="POST" action="/api/passwords/<%=password.password_id%>/delete">
                      <button type="submit">Delete</button>
                    </form>
                  </div>
                  <div class="overlay"></div>
                </div>
            </li>
              <!-- EDIT PASSWORD FORM BEGIN -->
              <div class="edit_password_container">
                <h2>Edit your password</h2>
                <form method="POST" action="/api/passwords/<%=password.password_id%>">
                  <!-- Hidden input field to send password ID from form -->
                  <input type="hidden">
                  <!-- Hidden input field to send password ID from form -->
                  <div class="form_group">
                    <label for="website">Website</label>
                    <input type="text" name="website" class="form-control" value="<%=password.password_url%>" required="true">
                  </div>
                  <div class="form_group">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control" value="<%=password.password_name%>" required="true">
                  </div>
                  <div class="form_group">
                    <label for="category">Category</label>
                    <select name="categories" class="form-select" required="true">
                      <option value="" selected="selected" disabled hidden>Pick your category</option>
                      <option value="1">Business</option>
                      <option value="2">Entertainment</option>
                      <option value="3">Social</option>
                      <option value="4">News</option>
                    </select>
                  </div>
                  <div class="form_group">
                    <label for="login">Log in</label>
                    <input type="text" name="login" class="form-control" value="<%=password.password_username%>" required="true">
                  </div>
                  <div class="form_group">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" value="<%=password.password_password%>" required="true" autocomplete="off">
                  </div>
                  <div class="form_btns">
                    <button type="submit" class="btn btn-primary save_btn">Save</button>
                    <button type="button" class="btn btn-danger cancel_btn">Cancel</button>
                  </div>
                </form>
              </div>
              <!-- EDIT PASSWORD FORM END -->
          <% }) %>
        </ul>
        <% } %>
      </div>
      <!-- PERSONAL PASSWORDS END -->

      <!-- ORGANIZATION PASSWORDS START -->
      <div class="organization_passwords_container">
        <% if (!organization[0]) { %>
          <h2 class="is_empty_msg">You are not part of any organizations</h2>
        <% } else { %>
        <h2>Your organization passwords for <%=organization[0].name%></h2>
        <ul class="password_list">
          <% organization.forEach((password) => { %>
            <li class="password_item">
              <div class="background" style="background-image: url(//logo.clearbit.com/<%=password.password_url%>)"></div>
              <div class="hidden">
                <h3><%=password.password_name%></h3>
                <div class="password_buttons">
                  <button><a target="_blank" style="color: white; text-decoration: none;" href="https://<%=password.password_url%>">Visit</a></button>
                  <button class="clipboard_btn" data-toggle="tooltip" title="copied!" data-clipboard-action="copy" data-clipboard-text="<%=password.password_password%>">Copy</button>
                </div>
                <div class="overlay"></div>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } %>
      </div>
    </div>
    <!-- PASSWORDS CONTAINER END -->
  </body>


  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
  <script type="module" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/clipboard_copier.js"></script>
  <script type="text/javascript" src="/scripts/password_list.js"></script>
  <script type="text/javascript" src="/scripts/password_generator.js"></script>
  <script type="module" src="/scripts/anim.js"></script>


</html>
